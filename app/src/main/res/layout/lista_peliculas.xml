<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/cincoestrella"
        android:layout_width="50dp"
        android:layout_height="41dp"
        app:layout_constraintStart_toEndOf="@+id/cuatroestrella"
        app:layout_constraintTop_toBottomOf="@+id/año"
        app:srcCompat="@android:drawable/star_off" />

    <ImageButton
        android:id="@+id/cuatroestrella"
        android:layout_width="50dp"
        android:layout_height="41dp"
        app:layout_constraintStart_toEndOf="@+id/tresestrella"
        app:layout_constraintTop_toBottomOf="@+id/año"
        app:srcCompat="@android:drawable/star_off" />

    <ImageButton
        android:id="@+id/dosestrella"
        android:layout_width="50dp"
        android:layout_height="41dp"
        app:layout_constraintStart_toEndOf="@+id/estrella"
        app:layout_constraintTop_toBottomOf="@+id/año"
        app:srcCompat="@android:drawable/star_off" />

    <ImageButton
        android:id="@+id/tresestrella"
        android:layout_width="50dp"
        android:layout_height="41dp"
        app:layout_constraintStart_toEndOf="@+id/dosestrella"
        app:layout_constraintTop_toBottomOf="@+id/año"
        app:srcCompat="@android:drawable/star_off" />

    <TextView
        android:id="@+id/valora2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/valoracion"
        app:layout_constraintEnd_toStartOf="@+id/titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo5" />

    <TextView
        android:id="@+id/año"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/titulo3"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <TextView
        android:id="@+id/titulo5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/Año"
        app:layout_constraintEnd_toStartOf="@+id/titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo3" />

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/titulo3"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <TextView
        android:id="@+id/titulo3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/Id_pelicula"
        app:layout_constraintEnd_toStartOf="@+id/titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo2" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/Titulo"
        app:layout_constraintEnd_toStartOf="@+id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/estrella"
        android:layout_width="50dp"
        android:layout_height="41dp"
        app:layout_constraintStart_toEndOf="@+id/valora2"
        app:layout_constraintTop_toBottomOf="@+id/año"
        app:srcCompat="@android:drawable/star_off" />

</androidx.constraintlayout.widget.ConstraintLayout>